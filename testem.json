{
    "launchers": {
        "CSSLint": {
            "command": "csslint css"
        },
        "SASS": {
        	"command": "grunt sass:dev"
        },
        "StyleDocco": {
        	"command": "styledocco style/sass/"
        }
    },
    "launch_in_dev": [
        "SASS",
        "CSSLint",
        "StyleDocco",
        "PhantomJS",
        "Chrome"
    ],
    "src_files": [
        "libs/a5s/rsvp.js",
        "libs/a5s/*.js",
        "core/sji.js",
        "core/DragDrop.js",
        "core/linklistener.js",
        "core/ALCounter.js",
        "core/GUIBuilder.js",
        "core/GameLog.js",
        "counters/**/*.js",
        "test/js/**/*.js"
    ],
    "watch_files": [
        "style/**/*.scss",
        "lib/**/*.js",
        "test/js/**/*.js"
    ]
}
